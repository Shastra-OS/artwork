# Maintainer: ShastraOS <vivek@shastraos.co>

pkgname=shastraos-icons
pkgver=0.1
pkgrel=1
pkgdesc="ShastraOS Icons"
url="https://github.com/shastra-os/icons"
arch=('any')
license=('GPL3')
makedepends=()
depends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)

prepare() {
	cp -af ../files/. ${srcdir}
}

package() {
	(find * -type f -exec install -Dm 644 "{}" "$pkgdir/usr/share/icons/{}" \;)
}


